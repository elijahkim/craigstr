<h2>Sign Up</h2>

<%= form_for @user do |form| %>

  <%= render partial: "app/errors", locals: { object: @user } %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "Sign up" %>
  </div>
<% end %>
